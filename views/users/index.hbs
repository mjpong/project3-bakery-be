{{#extends 'base'}}

{{#block 'content'}}

<div class="container-fluid">
    <div>
        <h3 style="text-align: center;">All Orders </h3>
    </div>
    <div class="row">

        <div class="col-12">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>User ID</th>
                        <th>Total Cost</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>
                            {{this.id}}
                        </td>
                        <td>
                            {{this.orderDateShort}}
                        </td>
                        <td>
                            {{this.user_id}}
                        </td>
                        <td>
                            ${{this.orderCost}}
                        </td>
                        <td>
                            {{this.order_status.status}}
                        </td>
                        <td>
                            <a href="/orders/{{this.id}}" class="btn allbtn">More details</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{/block}}
{{/extends}}